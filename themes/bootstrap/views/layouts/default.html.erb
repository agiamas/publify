	<!-- Twitter  -->
	<meta name="twitter:card" content="summary">
	<meta name="twitter:url" content="http://www.example.com/your-url-goes-here/"> [URL]
	<meta name="twitter:title" content="Title Goes Here"> [HTML TITLE]
	<meta name="twitter:description" content="Your description goes here."> [HTML META desc]
	<meta name="twitter:image" content="http://example.com/image.jpg"> [if we do not have one, we use Logo image]
	
	<!-- Google +  -->
	<meta itemprop="name" content="The Name or Title Here">
	<meta itemprop="description" content="This is the page description">
	<meta itemprop="image" content="http://www.example.com/image.jpg">
  
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&subset=latin,greek' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag "/stylesheets/theme/bootstrap.css", "/stylesheets/theme/style.css", :media => 'all' %>
  <%= stylesheet_link_tag "/stylesheets/theme/reset.css", "/stylesheets/theme/normalize.min.css", "/stylesheets/theme/generic.css", "/stylesheets/theme/blog.css", :media => 'all' %>
